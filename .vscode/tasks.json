{
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-G",
                "Ninja"
            ]
        },
        {
            "label": "ninja",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": [
                "ninja"
            ],
            "args": [
                "-C",
                "build"
            ],
            "problemMatcher": "$gcc",
            //"dependsOn": [
            //    "cmake"
            //],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}